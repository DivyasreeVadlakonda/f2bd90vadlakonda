extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let id = toShow._id 
    - let Pigment = toShow.Pigment 
    - let Power = toShow.Power 
    - let Location = toShow.Location 
    - let actionid = "/resource/jackals/" + id 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='jackalAttr mr-3') Jackal ID is: 
        div #{id} 
      div.row 
        div(class='jackalAttr mr-3') Jackal Pigment is: 
        div #{Pigment} 
      div.row 
        div(class='jackalAttr mr-3') Jackal Power is: 
        div #{Power} 
      div.row 
        div(class='jackalAttr mr-3') Jackal Location is: 
        div #{Location} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/jackals' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'       
      }).then((resp) => { 
        return resp.json();   
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/jackals' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 
 